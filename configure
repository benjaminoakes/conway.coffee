#!/usr/bin/env bash
set -o errexit

# Assumes rvm:
gem install bundler --version "~> 1.0" --no-rdoc --no-ri
bundle install

hash npm 2>&- || {
	echo "[error] npm not found"
	echo "[info] Downloading installer.  Please run 'sudo bash install.sh'"
	curl -O http://npmjs.org/install.sh
	exit -1
}
npm install
